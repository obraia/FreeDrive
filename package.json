{
  "name": "freedrive",
  "version": "0.0.1",
  "description": "Gerenciador de arquivos em nuvem inspirado no Google Drive e constru√≠do em React + NodeJS",
  "main": "index.js",
  "repository": "https://github.com/obraia/FreeDrive",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "start:client": "npm run start --prefix client",
    "dev": "tsnd --tree-kill --no-notify --respawn --transpile-only index.ts --start:client",
    "deploy": "yarn clean & yarn build & yarn build:client & yarn copy",
    "build": "tsc --build",
    "build:client": "npm run build --prefix client",
    "copy": "copyfiles ./.env.production ./package.json dist",
    "clean": "tsc --build --clean"
  },
  "prisma": {
    "schema": "./src/infrastructure/database/prisma/schema.prisma",
    "seed": "ts-node  ./src/infrastructure/database/prisma/seed.ts"
  },
