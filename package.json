{
  "name": "freedrive",
  "version": "0.0.1",
  "description": "Gerenciador de arquivos em nuvem inspirado no Google Drive e construído em React + NodeJS",
  "main": "index.js",
  "repository": "https://github.com/obraia/FreeDrive",
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "ts-node-dev --tree-kill --no-notify --respawn --transpile-only index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc --build",
    "copy": "copyfiles ./.env ./package.json ./src/**/*.prisma ./src/**/*.graphql dist",
    "clean": "tsc --build --clean",
    "deploy": "yarn clean & yarn build & yarn copy & yarn react:build",
    "restart": "pm2 restart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:seed": "npx prisma db seed",
    "prisma:push": "npx prisma db push",
    "react:build": "npm run build --prefix client",
    "react:start": "npm run start --prefix client",
    "heroku:prd": "cd dist && git branch -M main && git add . && git commit -m \"Nova versão\" && git push -u origin main -f",
    "heroku:dev": "cd dist && git branch -M dev && git add . && git commit -m \"Nova versão\" && git push -u origin dev -f",
    "heroku-postbuild": "npm run prisma:generate"
  },
  "prisma": {
    "schema": "./src/infrastructure/database/prisma/schema.prisma",
    "seed": "ts-node  ./src/infrastructure/database/prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/firebase": "^3.2.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/luxon": "^2.0.9",
    "@types/multer": "^1.4.7",
    "@types/uuid": "^8.3.1",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.12",
    "prisma": "^3.9.1",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "@prisma/client": "^3.9.1",
    "@prisma/engines": "^2.23.0-14.62b5651ea3cae584baaddfb914e40e827acc6696",
    "axios": "^0.26.0",
    "bcrypt": "^5.0.1",
    "check-disk-space": "^3.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase": "^9.0.1",
    "firebase-admin": "^9.11.1",
    "graphql": "^15.0.0",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.3.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^8.3.2"
  }
}